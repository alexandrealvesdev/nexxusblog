<style>
    .colorNav {
        width: 100%;
        height: 7rem;
        background: linear-gradient(190deg, rgb(122, 51, 150) 0%, rgb(127, 30, 165) 21%, rgba(169, 9, 190, 1) 81%);
    }

    .containerb {
        display: flex;
        flex-wrap: wrap;
        width: 100%;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 0 1.5rem;
        z-index: 5;
    }

    .cardBlog h2 {
        margin-bottom: 0;
        padding-left: 1rem;
        color: #000;
        font-size: 1.8rem;
        font-weight: 400;
    }

    .imageBlog {
        padding: 1rem;
        padding-bottom: .3rem;
        max-width: 360px;
        max-height: 208px;
        object-fit: cover;
    }

    .articleBlog {
        font-size: 1.7rem;
        text-align: left;
    }

    @media screen and (min-width: 1000px) {
        .containerb {
            justify-content: left;
        }

        .cardBlog h2 {
            font-size: 3rem;
            font-weight: 600;
        }

        .imageBlog {
            max-width: 950px;
            max-height: 535px;
        }

        .articleBlog {
            font-size: 1.9rem;
            text-align: left;
            max-width: 950px;
        }
    }

    @media screen and (min-width: 1540px) {
        .containerb {
            width: 100%;
            padding: 0 12%;
        }
    }

    @media screen and (min-width: 2006px) {
        .containerb {
            width: 100%;
            padding: 0 21%;
        }
    }
</style>

<%- include("./partials/header.ejs") %>
    <%- include("./partials/navbar.ejs") %>
        <div class="colorNav"></div>

        <div class="containerb">
            <div class="cardBlog">
                <a>
                    <h2>
                        <%= article.title %>
                    </h2>
                    <% if (article.image) { %>
                        <img class="imageBlog" src="/uploads/<%= article.image %>" alt="<%= article.title %>">
                        <% } %>
                </a>
            </div> <!--cardBlog-->
            <div class="articleBlog">
                <%- article.body %>
            </div>
        </div> <!--container-->


        <%- include("./partials/footer.ejs") %>